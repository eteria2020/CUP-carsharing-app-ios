platform :ios, '9.0'

def shared_pods
    use_frameworks!
    pod 'Boomerang', :git => "https://github.com/synesthesia-it/Boomerang.git", :branch => 'v1'
    pod 'pop'
    pod 'BonMot'
    pod 'SpinKit'
    pod 'Fabric'
    pod 'Crashlytics'
    pod 'SnapKit', '~> 3.0.2'
    pod 'Localize-Swift'
    pod 'Moya/RxSwift'
    pod 'Gloss'
    pod 'Moya-Gloss/RxSwift'
    pod 'KeychainSwift'
    pod 'ReachabilitySwift'
    pod 'StoryboardConstraint'
    pod 'DeviceKit'	
    pod 'Gifu'
    pod 'TPKeyboardAvoiding'
    pod 'SideMenu'
    pod 'RxGesture'
    pod 'GoogleMaps'
end

target 'Sharengo' do
  use_frameworks!
  shared_pods
end


