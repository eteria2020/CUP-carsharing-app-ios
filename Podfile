platform :ios, '9.0'

def shared_pods
    use_frameworks!
    pod 'RxSwift'
    pod 'Boomerang', :git => "https://github.com/synesthesia-it/Boomerang.git", :branch => 'v1'
    pod 'pop', :git => "https://github.com/facebook/pop.git", :tag => '1.0.9'
    pod 'BonMot', :git => "https://github.com/Raizlabs/BonMot.git", :tag => '4.3.1'
    pod 'SpinKit'
    pod 'Fabric'
    pod 'Crashlytics'
    pod 'SnapKit', '~> 3.0.2'
    pod 'Localize-Swift'
    pod 'Action', :git => "https://github.com/RxSwiftCommunity/Action.git", :tag => '3.0.0'
    pod 'Moya/RxSwift'
    pod 'Gloss'
    pod 'Moya-Gloss/RxSwift'
    pod 'KeychainSwift'
    pod 'ReachabilitySwift', '~> 3'
    pod 'DeviceKit'	
    pod 'Gifu'
    pod 'TPKeyboardAvoiding'
    pod 'SideMenu', :git => "https://github.com/jonkykong/SideMenu.git", :branch => '2.3.2'
    pod 'RxGesture'
    pod 'GoogleMaps'
    pod 'OneSignal', '>= 2.6.2', '< 3.0'
end

target 'Sharengo' do
  use_frameworks!
  shared_pods
end


